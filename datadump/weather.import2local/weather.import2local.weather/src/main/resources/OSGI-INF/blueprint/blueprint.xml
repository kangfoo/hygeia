<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
       xmlns:camel="http://camel.apache.org/schema/blueprint"
       xsi:schemaLocation="
       http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
       http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">

    <cm:property-placeholder persistent-id="com.kangfoo.study.hygeia">
        <cm:default-properties>
            <cm:property name="WeatherImport2File.flag" value="weather" />
            <cm:property name="WeatherImport2File.quartz2" value="quartz2://weather_groupName/timerName?cron=0+15+*+?+*+*" />
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="getWeather" class="com.kangfoo.study.hygeia.weather.import2local.weather.impl.GetWeatherImpl"/>

    <camelContext id="blueprintContext" trace="false" xmlns="http://camel.apache.org/schema/blueprint">
        <route>
            <from uri="{{WeatherImport2File.quartz2}}"/>
            <to uri="bean:getWeather?method=importData" />
        </route>

    </camelContext>

</blueprint>
